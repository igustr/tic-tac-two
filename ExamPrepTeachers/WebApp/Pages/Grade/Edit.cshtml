@page
@model ExamPrepTeachers.Pages_Grade.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Grade</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Grade.Id" />
            <div class="form-group">
                
                <label asp-for="Grade.EnrollmentId" class="control-label"></label>
                <select asp-for="Grade.EnrollmentId" class="form-control" asp-items="ViewBag.EnrollmentId"></select>
                <span asp-validation-for="Grade.EnrollmentId" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Grade.TaskName" class="control-label"></label>
                <input asp-for="Grade.TaskName" class="form-control" />
                <span asp-validation-for="Grade.TaskName" class="text-danger"></span>
            </div>
            <div class="form-group">
                
                <label asp-for="Grade.Score" class="control-label"></label>
                <input asp-for="Grade.Score" class="form-control" />
                <span asp-validation-for="Grade.Score" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
