@page
@model WebApp.Pages.NewGame

<h1>New Game</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form method="post">
            <h3>Select Game Mode</h3>
            <div class="form-check mb-3">
                <input type="radio" id="playerVsPlayer" name="GameMode" value="PlayerVsPlayer" class="form-check-input">
                <label for="playerVsPlayer" class="form-check-label">Player vs Player</label>
            </div>
            <div class="form-check mb-3">
                <input type="radio" id="aiVsAi" name="GameMode" value="AIvsAI" class="form-check-input">
                <label for="aiVsAi" class="form-check-label">Player vs AI</label>
            </div>
            <div class="form-check mb-3">
                <input type="radio" id="aiVsAi" name="GameMode" value="AIvsAI" class="form-check-input">
                <label for="aiVsAi" class="form-check-label">AI vs AI</label>
            </div>
        </form>
    </div>
</div>
<div class="row justify-content-center mt-4">
    <div class="col-md-6 text-center">
        <div class="btn-group-vertical" role="group" style="width: 100%;">
            <button type="submit" class="btn btn-info btn-lg mb-2" name="gameType" value="default">Default</button>
            <button type="submit" class="btn btn-info btn-lg mb-2" name="gameType" value="custom">Custom</button>
        </div>
    </div>
</div>