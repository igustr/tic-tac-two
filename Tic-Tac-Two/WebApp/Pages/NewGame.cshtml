@page
@model WebApp.Pages.NewGame

<h1 class="text-center mb-4" style="color: #343a40;">New Game</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form method="post" class="p-4 rounded shadow-lg" style="background-color: #f9f9f9;">
            
            <h3 class="text-center mb-4" style="color: #007BFF;">Select Game Mode</h3>

            <div class="form-check mb-3">
                <input type="radio" id="playerVsPlayer" name="GameMode" value="PlayerVsPlayer" class="form-check-input" checked>
                <label for="playerVsPlayer" class="form-check-label" style="font-size: 18px; font-weight: 500;">Singleplayer</label>
            </div>
            <div class="form-check mb-3">
                <input type="radio" id="multiplayer" name="GameMode" value="Multiplayer" class="form-check-input">
                <label for="multiplayer" class="form-check-label" style="font-size: 18px; font-weight: 500;">Multiplayer</label>
            </div>
            <div class="form-check mb-3">
                <input type="radio" id="playerVsAi" name="GameMode" value="PlayerVsAI" class="form-check-input">
                <label for="playerVsAi" class="form-check-label" style="font-size: 18px; font-weight: 500;">Player vs AI</label>
            </div>
            <div class="form-check mb-3">
                <input type="radio" id="aiVsAi" name="GameMode" value="AIvsAI" class="form-check-input">
                <label for="aiVsAi" class="form-check-label" style="font-size: 18px; font-weight: 500;">AI vs AI</label>
            </div>

            <!-- Game Type Selection Buttons -->
            <div class="btn-group-vertical" role="group" style="width: 100%; margin-top: 30px;">
                <button type="submit" class="btn btn-lg btn-primary mb-3" name="GameType" value="default" style="padding: 15px 0; font-size: 18px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600;">Default</button>
                <button type="submit" class="btn btn-lg btn-warning mb-3" name="GameType" value="custom" style="padding: 15px 0; font-size: 18px; font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; font-weight: 600;">Custom</button>
            </div>
            
        </form>
    </div>
</div>

<style>
    body {
        background-color: #f1f1f1;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
    }

    h1 {
        font-size: 2.5rem;
        color: #343a40;
        font-weight: 600;
    }

    .btn-primary {
        background-color: #007BFF;
        border: none;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-primary:hover {
        background-color: #0056b3;
        transform: scale(1.05);
    }

    .btn-primary:active {
        background-color: #003f7f;
        transform: scale(0.95);
    }

    .btn-warning {
        background-color: #fd7e14;
        border: none;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 600;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

    .btn-warning:hover {
        background-color: #e6771f;
        transform: scale(1.05);
    }

    .btn-warning:active {
        background-color: #e16a00;
        transform: scale(0.95);
    }

    .form-check-label {
        font-size: 18px;
        font-weight: 500;
        color: #495057;
    }

    .form-check-input:checked {
        background-color: #007BFF;
        border-color: #007BFF;
    }

    .form-check-input {
        height: 20px;
        width: 20px;
    }
</style>
