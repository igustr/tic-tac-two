@page
@using GameBrain
@using ConsoleUI
@model WebApp.Pages.PlayGameWeb

<h2>Tic-Tac-Two</h2>
<p>Next move by: <strong>@Model.TicTacTwoBrain.NextMoveBy</strong></p>

<style>
    .board {
        border-collapse: collapse;
        margin: 20px auto;
        font-family: Arial, sans-serif;
        text-align: center;
    }

    .board td {
        width: 50px;
        height: 50px;
        border: 2px solid #4d5154;
        font-size: 24px;
        font-weight: bold;
        background-color: #f8f8f8;
        cursor: pointer;
    }

    .board td a {
        text-decoration: none;
        color: #4CAF50;
        display: block;
        width: 100%;
        height: 100%;
        line-height: 50px;
    }

    .board td a:hover {
        background-color: #e8f5e9;
    }

    .board span {
        color: #777;
        font-size: 14px;
        line-height: 1.5;
        display: inline-block;
    }

    .divider-v {
        width: 10px;
        height: 50px;
        background-color: #c8e6c9;
    }

    .divider-h {
        height: 10px;
        background-color: #c8e6c9;
    }
</style>

<table class="board">
    @for (int y = 0; y < Model.TicTacTwoBrain.DimY; y++)
    {
        <tr>
            @for (int x = 0; x < Model.TicTacTwoBrain.DimX; x++)
            {
                <td>
                    @if (Model.TicTacTwoBrain.GameBoard[x][y] == EGamePiece.Empty)
                    {
                        <a asp-route-x="@x" asp-route-y="@y" asp-route-GameId="@Model.GameName">&nbsp;</a>
                    }
                    else
                    {
                        @(Model.TicTacTwoBrain.GameBoard[x][y])
                    }
                </td>
                @if (x < Model.TicTacTwoBrain.DimX - 1 && Model.TicTacTwoBrain.gridXCoordinates.Contains(x + 1))
                {
                    <td class="divider-v"></td>
                }
            }
        </tr>
        @if (y < Model.TicTacTwoBrain.DimY - 1 && Model.TicTacTwoBrain.gridYCoordinates.Contains(y + 1))
        {
            <tr>
                @for (var x = 0; x < Model.TicTacTwoBrain.DimX; x++)
                {
                    <td class="divider-h" colspan="2"></td>
                }
            </tr>
        }
    }
</table>
