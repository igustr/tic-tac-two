@page
@model WebApp.Pages.Load

<h1>Load Game</h1>

<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="GameName" class="control-label"></label>
                <select asp-for="GameName" class="form-select" asp-items="Model.GamesSelectList"></select>
            </div>

            <div class="form-group">
                <input type="submit" value="Start" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>