@page
@model WebApp.Pages.Load

<h1 class="text-center mb-5" style="color: #343a40; font-weight: 600;">Load Game</h1>

<div class="row justify-content-center mt-4">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 1.2rem; font-weight: 500;"></div>

            <div class="form-group mb-4">
                <label asp-for="GameName" class="control-label" style="font-size: 1.1rem; font-weight: 500;">Select Game</label>
                <select asp-for="GameName" class="form-select" asp-items="Model.GamesSelectList" style="font-size: 1.1rem; padding: 10px;">
                    <option value="">--Select Game--</option> <!-- Default selection option -->
                </select>
            </div>

            <div class="form-group mb-4">
                <input type="submit" value="Start Game" class="btn btn-lg btn-info w-100"/>
            </div>
        </form>
    </div>
</div>

<style>
    .btn-lg {
        font-size: 1.4rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 500;
        border-radius: 5px;
        transition: background-color 0.2s ease, transform 0.2s ease;
    }

    .btn-info {
        background-color: #FF5722; /* Softer orange */
        color: black;
    }
    .btn-info:hover {
        background-color: #E64A19; /* Darker orange on hover */
        transform: scale(1.05);
    }
    .btn-info:active {
        background-color: #D84315; /* Even darker orange on click */
        transform: scale(0.95);
    }

    .form-select {
        font-size: 1.1rem;
        padding: 10px;
        border-radius: 5px;
        width: 100%;
        border: 1px solid #ddd;
        background-color: #f8f9fa; /* Light background color */
    }

    .form-select:focus {
        border-color: #FF5722; /* Matching button color */
        box-shadow: 0 0 5px rgba(255, 87, 34, 0.3); /* Shadow effect */
    }

    .control-label {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .alert-danger {
        font-size: 1.2rem;
        font-weight: 500;
    }
</style>
