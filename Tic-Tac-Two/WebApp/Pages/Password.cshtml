@page
@model Password
@{
ViewData["Title"] = "Home page";
}

<div class="text-center mb-4">
    <h1 class="display-4">TIC-TAC-TWO</h1>
</div>

@if (!string.IsNullOrWhiteSpace(Model.Error))
{
<div class="alert alert-danger" role="alert">
    @Model.Error
</div>
}

<div class="row justify-content-center">
    <div class="col-md-6">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3" style="font-size: 1.2rem; font-weight: 500;"></div>

            <div class="form-group mb-4">
                <label asp-for="InsertedPassword" class="control-label" style="font-size: 1.1rem; font-weight: 500;">Enter Password</label>
                <input asp-for="InsertedPassword" class="form-control" style="font-size: 1.1rem; padding: 10px;" />
                <span asp-validation-for="InsertedPassword" class="text-danger"></span>
            </div>

            <div class="form-group mb-4">
                <input type="submit" value="Connect" class="btn btn-lg btn-info w-100" />
            </div>
        </form>
    </div>
</div>

<style>
    .btn-lg {
        font-size: 1.4rem;
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        font-weight: 500;
        border-radius: 5px;
        transition: background-color 0.2s ease, transform 0.2s ease;
    }

    .btn-info {
        background-color: #FF5722; /* Softer orange */
        color: black;
    }

    .btn-info:hover {
        background-color: #E64A19; /* Darker orange on hover */
        transform: scale(1.05);
    }

    .btn-info:active {
        background-color: #fd7e14; /* Even darker orange on click */
        transform: scale(0.95);
    }

    .form-control {
        font-size: 1.1rem;
        padding: 10px;
        border-radius: 5px;
        border: 1px solid #ddd;
        background-color: #f8f9fa; /* Light background color */
    }

    .form-control:focus {
        border-color: #FF5722; /* Matching button color */
        box-shadow: 0 0 5px rgba(255, 87, 34, 0.3); /* Shadow effect */
    }

    .control-label {
        font-weight: 600;
        font-size: 1.1rem;
    }

    .alert-danger {
        font-size: 1.2rem;
        font-weight: 500;
    }

    .text-center {
        margin-bottom: 2rem;
    }
</style>
