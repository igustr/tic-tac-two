@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <h1 class="display-4">TIC-TAC-TWO</h1>
</div>


@if (!string.IsNullOrWhiteSpace(Model.Error))
{
<div class="alert alert-danger" role="alert">
    @Model.Error
</div>
}

<div class="row justify-content-center mt-4">
    <div class="col-md-6 text-center">
        <div class="btn-group-vertical" role="group" style="width: 100%;">
            <a asp-page="/NewGame" class="btn btn-info btn-lg mb-2">New Game</a>
            <a asp-page="/Load" class="btn btn-info btn-lg mb-2">Load Game</a>
            <a asp-page="/ChooseConfig" class="btn btn-info btn-lg mb-2">Configurations</a>
            <a asp-page="/Home" class="btn btn-success btn-lg">Connect to Existing Game</a>
        </div>
    </div>
</div>


<style>
    .btn-info {
        background-color: #FF5722; /* Orange background */
        color: #000; /* Black text */
        border: none;
        padding: 15px 30px;
        font-size: 1.4rem; /* Increased font size */
        font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif; /* Beautiful font */
        font-weight: 500; /* Thicker font */
        border-radius: 5px;
        transition: background-color 0.2s ease, transform 0.2s ease;
    }

    .btn-info:hover {
        background-color: #E64A19; /* Darker orange on hover */
        transform: scale(1.05); /* Slight scale effect on hover */
    }

    .btn-info:active {
        background-color: #D84315; /* Even darker orange when clicked */
        transform: scale(0.95); /* Slight scale effect when clicked */
    }


</style>

